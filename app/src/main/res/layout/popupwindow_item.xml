<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zerobranch.layout.SwipeLayout
        android:id="@+id/swipe_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:draggedItem="@+id/linearLayout_workoutOption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:leftItem="@id/left_view2"
        app:rightItem="@id/right_view2"
        app:swipeDirection="left|right">

        <TextView
            android:id="@+id/left_view2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#68BBE3"
            android:clickable="true"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="UPDATE"
            android:textColor="@color/white"
            android:textSize="4pt" />


        <LinearLayout
            android:id="@+id/linearLayout_workoutOption"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_200"
            android:orientation="horizontal"
            android:translationZ="90dp">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:gravity="center"
                android:text="TextView"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/right_view2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="#ff0000"
            android:clickable="true"
            android:gravity="center"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="DELETE"
            android:textColor="@color/white"
            android:textSize="4pt" />
    </com.zerobranch.layout.SwipeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>